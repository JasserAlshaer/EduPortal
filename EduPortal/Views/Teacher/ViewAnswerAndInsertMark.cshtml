@model EduPortal.Models.StudentTask;
@{
      Layout = "_LayoutAdmin";
}
   <section class="section">
          <div class="section-body">
            <div class="row">
              <div class="col-12">
                <div class="card">
                  <div class="card-header">
                    <h4>Insert Mark For Task Solution</h4>
                  </div>

                 <form action="InsertMarks" method="post" >
                  <div class="card-body">
                      <div class="form-group row mb-4">
                      <label class="col-form-label text-md-left col-12 col-md-3 col-lg-3">Student Notes</label>
                       
                        <div class="col-sm-12 col-md-12">
                        <input type="text" value="@Model.Notes" class="form-control" readonly required>
                      </div>
                      
                    </div>
                      <input type="text" hidden name="id" value="@Model.StudentTaskId" class="form-control">
                    <div class="form-group row mb-4">
                      <label class="col-form-label text-md-left col-12 col-md-3 col-lg-3">Final Mark</label>
                       
                        <div class="col-sm-12 col-md-12">
                        <input type="number" name="mark" class="form-control" required>
                      </div>
                      
                    </div>
                   <div class="form-group row mb-4">
                      <label class="col-form-label text-md-left col-12 col-md-3 col-lg-3">Note / Replay </label>
                       
                        <div class="col-sm-12 col-md-12">
                        <input type="text" name="note" class="form-control" required>
                      </div>
                      
                    </div>


                    
                      <div class="col-sm-12 col-md-12" style="margin-left:190px;">
                        <button class="col-8 btn btn-primary" type="submit">Save Mark</button>
                      </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
        
        </section>
       
