<section class="section">
    <div class="section-body">
        <div class="container-fluid">
            <div class="row">
                <label class="col-5 text-end" style="margin:5px; margin-left:55px;">From</label>
                <label class="col-5 text-end" style="margin:5px; margin-left:5px;">To</label>
            </div>
            <div class="row">
                <form asp-action="FillterAttendence" method="post">
                    <input class="col-4" type="date" name="start" value="" style="margin:5px; margin-left:129px; border-radius:5px; width:180px;" />
                    <input class="col-4" type="date" name="end" value="" style="margin: 5px; margin-left: 129px; border-radius: 5px; width: 180px;" />
                    <input class="col-2 btn btn-outline-warning" type="submit" name="name" value="Search" style="margin: 5px; margin-left: 89px; border-radius: 5px; width: 180px;" />
                </form>
            </div>
        </div>
        <div class="row">

            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="table-title">
                           
                           
                            <div class="row">

                                <div class="col-sm-12">
                                    <a    onclick="exportTableToExcel('tab', 'members-data')"  class="btn btn-lg btn-outline-success"><i class="fas fa-file-csv"></i><span>Export To Excel</span></a>

                                    
                                    <span></span>
                                    <a href="#" id="btPrint" onclick="createPDF()" class="btn btn-lg btn-outline-danger"><i class="fas fa-file-pdf"></i> <span>Export to PDF</span></a>
                                    <span></span>
                                    <a href="#" onclick="Export2Word('tab', 'word-content');" class="btn btn-lg btn-outline-info"><i class="fas fa-file-word"></i> <span>Export to Word</span></a>
                                    <script src="~/js/exportReports.js"></script>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <h2 style="display:inline-block;">Appointment <b>Management</b></h2>
                        <button type="button" class="btn btn-primary" data-toggle="modal"
                                     data-target=".bd-example-modal-lg" style="float:right;">Add new appointment</button>
                    </div>
                    <div class="card-body p-0">
                        <div  id="tab" class="table-responsive">
                            <table class="table table-striped table-md">
                                <tr>
                                    <th>Id</th>
                                    <th>Employee Name</th>
                                    <th>Employee Department</th>
                                    <th>Attendence Date</th>
                                    <th>Check In Time</th>
                                    <th>Break Out  Time</th>
                                    <th>Break In Time</th>
                                    <th>Check Out Time</th>

                                </tr>
                                @*@foreach (var record in Model)
                                {*@
                                    <tr>
                                        <td>record.attendence.Id</td>
                                        <td>record.employee.Name</td>
                                        <td>record.department.DepartmentName</td>
                                        <td>record.attendence.AttendenceDate</td>
                                        <td>record.attendence.CheckIn</td>
                                        <td>record.attendence.BreakOut</td>
                                        <td>record.attendence.BreakIn</td>
                                        <td>record.attendence.CheckOut</td>

                                    </tr>
                                @*}*@

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</section>
