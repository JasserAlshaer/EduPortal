@model IEnumerable<EduPortal.Models.TeacherSession>
@{
     Layout = "_LayoutAdmin";
}
  <div class="loader"></div>
  <div id="app">
    <div class="main-wrapper main-wrapper-1">
      <div class="navbar-bg"></div>
      <!-- Main Content -->
 
        <section class="section">
          <div class="section-body">
            <div class="row">

               @foreach (var item in Model)
              {
               <div class="col-12 col-sm-6 col-md-6 col-lg-3">
                <article class="article">
                  <div class="article-header">
                    <div class="article-image">
                        <img src="~/Uploads/@item.Session.Image" />
                    </div>
                    <div class="article-title">
                      <h2><a href="#">@item.Course.Name</a></h2>
                    </div>
                  </div>
                  <div class="article-details">
                    <p>@item.Course.Description</p>
                    <div class="article-cta">
                      <a asp-action="SessionInformationShow" asp-route-id="@item.Session.SessionId" class="btn btn-primary">Open Session</a>
                    </div>
                  </div>
                </article>
              </div>
              } 
             
              
            </div>

          </div>
        </section>
       
      </div>
      
 </div>