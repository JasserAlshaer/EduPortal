@model EduPortal.Models.ProfileStudents;
@{
    Layout = "_LayoutStudent";
}
<div class="loader"></div>
  <div id="app">
      <!-- Main Content -->
     
        <section class="section">
          <div class="section-body">
            <div class="row mt-sm-4">
              <div class="col-12 col-md-12 col-lg-4">
                <div class="card author-box">
                  <div class="card-body">
                    <div class="author-box-center">
                      <img alt="image" src="~/Uploads/@Model.Student.Image" class="rounded-circle author-box-picture">
                      <div class="clearfix"></div>
                      <div class="author-box-name">
                        <a asp-action="Index">@Model.Student.FullName</a>
                      </div>
                      <div class="author-box-job">@Model.Status.Name - @Model.Status.ArabicName</div>
                    </div>
                    <div class="text-center">
                      <div class="author-box-description">
                        <p>
                         @Model.Spectialization.Name
                        </p>
                      </div>
                     
                      <div class="w-100 d-sm-none"></div>
                    </div>
                  </div>
                </div>
                <div class="card">
                  <div class="card-header">
                    <h4>Personal Details</h4>
                  </div>
                  <div class="card-body">
                    <div class="py-4">
                         <p class="clearfix">
                        <span class="float-left">
                          Joining Date
                        </span>
                        <span class="float-right text-muted">
                          @Model.Student.JoiningDate
                        </span>
                      </p>
                      <p class="clearfix">
                        <span class="float-left">
                          Birthday
                        </span>
                        <span class="float-right text-muted">
                         @Model.Student.BirthDate
                        </span>
                      </p>
                      <p class="clearfix">
                        <span class="float-left">
                          Phone
                        </span>
                        <span class="float-right text-muted">
                         @Model.Student.PhoneNumber
                        </span>
                      </p>
                      <p class="clearfix">
                        <span class="float-left">
                          Mail
                        </span>
                        <span class="float-right text-muted">
                         @Model.Login.Email
                        </span>
                      </p>
                     @* <p class="clearfix">
                        <span class="float-left">
                          Spectialization
                        </span>
                        <span class="float-right text-muted">
                           @Model.Spectialization.Name
                        </span>
                      </p>
                      *@
                    </div>
                  </div>
                </div>
                
              </div>
              <div class="col-12 col-md-12 col-lg-8">
                <div class="card">
                  <div class="padding-20">
                    <ul class="nav nav-tabs" id="myTab2" role="tablist">
                      <li class="nav-item">
                        <a class="nav-link active" id="home-tab2" data-toggle="tab" href="#about" role="tab"
                          aria-selected="true">Update Profile</a>
                      </li>
                     @* <li class="nav-item">
                        <a class="nav-link" id="profile-tab2" data-toggle="tab" href="#settings" role="tab"
                          aria-selected="false">Setting</a>
                      </li>*@
                    </ul>
                    <div class="tab-content tab-bordered" id="myTab3Content">
                      <div class="tab-pane fade show active" id="about" role="tabpanel" aria-labelledby="home-tab2">
                         <div class="row">
               <form method="post" class="needs-validation" asp-action="UpdateProfile" enctype="multipart/form-data">
                          <div class="card-header">
                            <h4>Edit Profile</h4>
                          </div>
                          <div class="card-body">
                            <div class="row">
                              <div class="form-group col-md-12 col-12">
                                <label>Full Name</label>
                                <input type="text" class="form-control" name="name" value="@Model.Student.FullName">
                                
                              </div>
                              
                            </div>
                            <div class="row">
                              <div class="form-group col-md-12 col-12">
                                <label>Profile Image</label>
                                <input type="file" class="form-control" name="image">
                                
                              </div>
                              <div class="form-group col-md-12 col-12">
                                <label>Phone</label>
                                <input type="tel" class="form-control"  name="phone" value="@Model.Student.PhoneNumber">
                              </div>
                            </div>
@*                            <div class="row">
                              <div class="form-group col-12">
                                <label>Bio</label>
                                <textarea
                                  class="form-control summernote-simple" name="pio">
                              @Model.Student.Pio
                              </textarea>
                              </div>
                            </div>*@

                          </div>
                          <div class="card-footer text-right">
                            <button class="btn btn-primary" type="submit">Save Changes</button>
                          </div>
                        </form>
                        </div>
                        
                      </div>
                      <div class="tab-pane fade" id="settings" role="tabpanel" aria-labelledby="profile-tab2">
                      
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

 </div>